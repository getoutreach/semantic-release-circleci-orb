{
  "name": "@getoutreach/semantic-release-circleci-orb",
  "description": "semantic-release plugin to publish CircleCI Orbs",
  "version": "1.1.10",
  "author": "Matt Oakes (https://mattoakes.net)",
  "type": "module",
  "scripts": {
    "format": "prettier --write .",
    "semantic-release": "semantic-release",
    "test": "nyc ava -v"
  },
  "bugs": {
    "url": "https://github.com/getoutreach/semantic-release-circleci-orb/issues"
  },
  "contributors": [
    "Matt Oakes <hello@mattoakes.net> (https://mattoakes.net)"
  ],
  "dependencies": {
    "@semantic-release/error": "^4.0.0",
    "aggregate-error": "^5.0.0",
    "execa": "^9.6.0"
  },
  "devDependencies": {
    "ava": "^6.4.0",
    "nyc": "^17.1.0",
    "prettier": "^3.6.2",
    "semantic-release": "^23.0.0",
    "tempy": "^3.0.0"
  },
  "engines": {
    "node": ">=20.16.0"
  },
  "files": [
    "lib",
    "index.js"
  ],
  "homepage": "https://github.com/getoutreach/semantic-release-circleci-orb#readme",
  "keywords": [
    "circleci",
    "circleci-orb",
    "publish",
    "registry",
    "semantic-release",
    "version"
  ],
  "license": "MIT",
  "main": "index.js",
  "nyc": {
    "include": [
      "lib/**/*.js",
      "index.js"
    ],
    "reporter": [
      "json",
      "text",
      "html"
    ],
    "all": true
  },
  "peerDependencies": {
    "semantic-release": "^23.0.0"
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "es5"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/getoutreach/semantic-release-circleci-orb.git"
  },
  "xo": {
    "prettier": true,
    "space": true
  }
}
